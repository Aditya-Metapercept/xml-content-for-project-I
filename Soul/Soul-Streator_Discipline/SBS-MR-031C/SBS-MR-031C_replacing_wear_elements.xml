                              <tbody>
                                 <row>
                                    <entry>
                                       <p>1</p>
                                    </entry>
                                    <entry>
                                       <p>Inner wall wear liner</p>
                                    </entry>
                                 </row>
                                 <row>
                                    <entry>
                                       <p>2</p>
                                    </entry>
                                    <entry>
                                       <p>Outer wall wear liner</p>
                                    </entry>
                                 </row>
                                 <row>
                                    <entry>
                                       <p>3</p>
                                    </entry>
                                    <entry>
                                       <p>Wear plate ridge</p>
                                    </entry>
                                 </row>
                                 <row>
                                    <entry>
                                       <p>4</p>
                                    </entry>
                                    <entry>
                                       <p>Floor wear liner</p>
                                    </entry>
                                 </row>
                              </tbody>
