<topic id="SetAutoStartAndAutoBoost-53F1B956" xml:lang="en">
   <title>Set <uicontrol>Auto Start</uicontrol>, <uicontrol>Auto Boost</uicontrol>, <uicontrol>LCM Alerts</uicontrol>, and <uicontrol>ECO Mode</uicontrol>
   </title>
   <shortdesc>
      <keyword>Reality NAM 25–100 kVA</keyword>
   </shortdesc>
   <prolog>
      <author>Pallavi</author>
      <critdates>
         <created date="2025-11-18+05:30"/>
         <revised modified="2025-11-18"/>
      </critdates>
      <metadata>
         <audience type="role"
                   otherprops="production, maintenance, quality, safety, engineering, management"/>
         <keywords><!-- Product layer -->
            <indexterm>metr-pxc-reality</indexterm>
            <indexterm>ups</indexterm>
