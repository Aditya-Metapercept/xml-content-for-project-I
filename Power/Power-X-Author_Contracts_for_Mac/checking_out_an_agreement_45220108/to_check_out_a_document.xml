         <othermeta name="title" content="To check out a document"/>
         <othermeta name="shortdesc"
                    content="Procedure to check out a document from X-Author into Microsoft Word for editing, preserving version locks and edit trace."/>
         <othermeta name="language" content="en-GB"/>
         <othermeta name="version" content="1.0.0"/>
         <othermeta name="docStage" content="approved"/>
