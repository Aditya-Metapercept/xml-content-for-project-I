         <othermeta name="title" content="To create an agreement template"/>
         <othermeta name="shortdesc"
                    content="Provides steps to create an agreement template, enter template details, and configure associated agreement metadata within the system."/>
         <othermeta name="language" content="en-GB"/>
         <othermeta name="version" content="1.0.0"/>
